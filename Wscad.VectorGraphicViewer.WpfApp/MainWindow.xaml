<Window x:Class="Wscad.VectorGraphicViewer.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Electrix by WSCAD" Height="420" Width="640"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Welcome -->
        <TextBlock Text="Welcome to Electrix by WSCAD"
                   FontSize="24" FontWeight="Bold"/>

        <Separator Grid.Row="1"/>

        <!-- Subtitle -->
        <TextBlock Grid.Row="2"
                   Text="Choose the primitive you want to draw:"
                   FontSize="16" Margin="0,8,0,0"/>

        <!-- Combo -->
        <ComboBox Grid.Row="4" Width="260" Height="32"
                  ItemsSource="{Binding AvailableKinds}"
                  SelectedItem="{Binding SelectedKind, Mode=TwoWay}"
                  Margin="0,4,0,0">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <!-- mostra o nome do enum -->
                    <TextBlock Text="{Binding}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
    </Grid>
</Window>