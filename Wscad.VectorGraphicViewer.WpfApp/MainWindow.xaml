<Window x:Class="Wscad.VectorGraphicViewer.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Electrix by WSCAD" Height="520" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- título -->
            <RowDefinition Height="16"/>
            <!-- separador -->
            <RowDefinition Height="Auto"/>
            <!-- subtítulo -->
            <RowDefinition Height="12"/>
            <!-- espaçamento -->
            <RowDefinition Height="Auto"/>
            <!-- linha: combo + botão -->
            <RowDefinition Height="16"/>
            <!-- espaçamento -->
            <RowDefinition Height="2*"/>
            <!-- painel de debug -->
            <RowDefinition Height="10"/>
            <!-- espaçamento -->
            <RowDefinition Height="3*"/>
            <!-- área de desenho -->
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Welcome to Electrix by WSCAD"
                   FontSize="24" FontWeight="Bold"/>

        <Separator Grid.Row="1"/>

        <!-- Subtítulo -->
        <TextBlock Grid.Row="2"
                   Text="Choose the primitive you want to draw:"
                   FontSize="16" Margin="0,8,0,0"/>

        <!-- Linha com Combo + Botão -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="8"/>
                <!-- espaçador -->
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <ComboBox Grid.Column="0" Height="32"
                      ItemsSource="{Binding AvailableKinds}"
                      SelectedItem="{Binding SelectedKind, Mode=TwoWay}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <Button Grid.Column="2" Content="Draw" Height="32" Width="100"
                    Command="{Binding DrawCommand}" />
        </Grid>

        <!-- Painel de Debug -->
        <GroupBox Grid.Row="6" Header="Debug" Margin="0,0,0,4">
            <TextBox Text="{Binding DebugText}" 
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     AcceptsReturn="True"
                     BorderThickness="0"
                     Background="Transparent"/>
        </GroupBox>

        <!-- Área de desenho -->
        <Border Grid.Row="8" BorderBrush="#DDD" BorderThickness="1"
                CornerRadius="6" Padding="8">
            <Canvas x:Name="Surface" Background="White"/>
        </Border>
    </Grid>
</Window>